<div class="container m-1">
  {{# each products}}
    <div class="row">
      {{# each this }}
        <div class="card col-md-4">
          <img src="{{this.imagePath}}" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text description">{{this.description}}</p>
            <div class="clearfix">
              <div class="price pull-left">${{this.price}}</div>
              <a href="/add-to-cart" class="btn btn-success pull-right">Add to Cart</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{/each}}
</div>
